<div class="container-fluid mt-4">
    <div class="row g-4" id="kpiCards">
        <div class="col-md-6 col-xl-3">
            <div class="card shadow rounded-4 text-white bg-primary h-100 kpi-card">
                <div class="card-body position-relative z-2">
                    <h5>Total Sales Today</h5>
                    <h2>₹<span id="totalSales">0</span></h2>
                </div>
                <i class="fas fa-cash-register kpi-icon"></i>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="card shadow rounded-4 text-white bg-success h-100 kpi-card">
                <div class="card-body position-relative z-2">
                    <h5>Total Profit</h5>
                    <h2>₹<span id="totalProfit">0</span></h2>
                </div>
                <i class="fas fa-coins kpi-icon"></i>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="card shadow rounded-4 text-white bg-info h-100 kpi-card">
                <div class="card-body position-relative z-2">
                    <h5>Quantity Sold</h5>
                    <h2><span id="quantitySold">0</span></h2>
                </div>
                <i class="fas fa-boxes kpi-icon"></i>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="card shadow rounded-4 text-white bg-warning h-100 kpi-card">
                <div class="card-body position-relative z-2">
                    <h5>New Inventory Added</h5>
                    <h2><span id="inventoryAdded">0</span></h2>
                </div>
                <i class="fas fa-truck-loading kpi-icon"></i>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-6 mb-4">
            <canvas id="salesChart" height="200"></canvas>
        </div>
        <div class="col-lg-6 mb-4">
            <canvas id="inventoryChart" height="200"></canvas>
        </div>
    </div>
</div>

<script src="~/js/dashbord.js"></script>


