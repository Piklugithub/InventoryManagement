<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<style>
    .kpi-card {
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .kpi-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

    .kpi-icon {
        position: absolute;
        bottom: 10px;
        right: 10px;
        font-size: 5rem;
        opacity: 0.15;
        color: rgba(255, 255, 255, 0.7);
        z-index: 0;
    }
</style>
