
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h4>Inventory Management</h4>
    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <select id="productSelect" class="form-select"></select>
        </div>
        <div class="col-md-2">
            <input type="number" id="quantity" class="form-control" placeholder="Quantity" />
        </div>
        <div class="col-md-4 d-flex gap-2">
            <button id="btnAddStock" class="btn btn-primary w-50">Add Stock</button>
            <button id="btnSell" class="btn btn-danger w-50">Sell</button>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Current Quantity</th>
            </tr>
        </thead>
        <tbody id="productTableBody"></tbody>
    </table>
</div>
@{
    <script src="~/js/inventory.js"></script>
}

