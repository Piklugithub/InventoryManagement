@page
@model StoreAnalysis.Views.Shared._ProfileMenuModel
@{
}
<style>
    #profileMenu a:hover {
        background-color: #0078AE;
    }
</style>
<div class="position-relative d-inline-block" id="profileContainer">
    <div class="d-flex align-items-center" style="cursor:pointer;" id="profilePicWrapper">
        <img id="headerUserImage" src="~/images/default-user.png" class="rounded-circle me-2" width="32" height="32" alt="Profile" />
        <span class="navbar-text me-2" id="headerUserName">Guest</span>
    </div>

    <div id="profileMenu" class="shadow rounded bg-dark position-absolute"
         style="top: 45px; right: 0; min-width: 160px; display: none; z-index: 1050;">
        <a href="/User/EditProfile" class="dropdown-item px-3 py-2">👤 Edit Profile</a>
        <a href="/User/Settings" class="dropdown-item px-3 py-2">⚙️ Account Settings</a>
        <a class="dropdown-item px-3 py-2 text-danger" id="logoutBtn">🚪 Logout</a>
    </div>
</div>
<!-- Logout Confirmation Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color:lightgray">
                <h5 class="modal-title" id="logoutModalLabel" style="color:black;">Confirm Logout</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="background-color:lightgray;color:black;">
                Are you sure you want to logout?
            </div>
            <div class="modal-footer" style="background-color:lightgray">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmLogout">Yes, Logout</button>
            </div>
        </div>
    </div>
</div>
